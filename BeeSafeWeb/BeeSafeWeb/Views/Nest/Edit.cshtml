@model BeeSafeWeb.Models.NestEstimate

<div class="container mx-auto max-w-lg p-6 bg-white shadow-md rounded-lg mt-10">
    <h2 class="text-2xl font-bold mb-4">Update Nest Status</h2>
    
    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="IsDestroyed" class="block text-gray-700 font-bold mb-2">Is Destroyed</label>
            <select asp-for="IsDestroyed" class="w-full p-2 border border-gray-300 rounded-lg">
                <option value="true">Destroyed</option>
                <option value="false">Not Destroyed</option>
            </select>
        </div>

        <div class="flex gap-4">
            <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded hover:bg-green-700">
                Save
            </button>
            <a asp-action="Index" class="bg-gray-500 text-white px-6 py-2 rounded hover:bg-gray-700">
                Back
            </a>
        </div>
    </form>
</div>